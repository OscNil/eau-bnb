<h1>Boats for rent in your region</h1>
<div class="div-scroller d-flex flex-wrap">
  <%@boats.each do |boat|%>
  <div class="card boat-card w-300">
    <p><%= link_to (cl_image_tag boat.photo, width: 300, height: 200, crop: :fill), boat_path(boat) %></p>
    <div class="card-details d-flex justify-content-between mr-2 ml-3">
      <div class="card-name">
        <%= boat.boat_name %>
      </div>
      <div class="card-avatar">
        <%= image_tag boat.owner.user_pic_url, class: "avatar card-avatar"%><br>
        <div class="card-info">
          <%= boat.nbr_beds %> <i class="fas fa-bed"></i><br>
          <%= boat.day_price %> â‚¬
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>
