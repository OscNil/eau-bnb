<h1>Find a nice boat</h1>

<div class="d-flex flex-wrap">
  <%@boats.each do |boat|%>
  <div class="card boat-card w-300 m-1">
    <p><%= link_to (cl_image_tag boat.photo, width: 300, height: 200, crop: :fill), boat_path(boat) %></p>
    <div class="card-details d-flex justify-content-between mr-2 ml-3">
      <div class="card-name"><%= boat.boat_name %></div>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar card-avatar" %>
      <div>
        <%= boat.nbr_beds %> <i class="fas fa-bed"></i><br>
        <%= boat.day_price %> â‚¬
      </div>
    </div>
  </div>

  <% end %>
</div>
